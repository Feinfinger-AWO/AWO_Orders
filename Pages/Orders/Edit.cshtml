@page
@model AWO_Orders.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Bestellung</h1>

<h4>Bearbeitung</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderModel.Id" />
            <div class="form-group">
                <label asp-for="OrderModel.Number" class="control-label"></label>
                <input asp-for="OrderModel.Number" readonly class="form-control" />
                <span asp-validation-for="OrderModel.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderModel.PlaceDate" class="control-label"></label>
                <input asp-for="OrderModel.PlaceDate" class="form-control" />
                <span asp-validation-for="OrderModel.PlaceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderModel.StatusId" class="control-label"></label>
                <select asp-for="OrderModel.StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="OrderModel.StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderModel.Note" class="control-label"></label>
                <input asp-for="OrderModel.Note" class="form-control" />
                <span asp-validation-for="OrderModel.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="OrderModel.EmplId" type="hidden" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Zurück</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
