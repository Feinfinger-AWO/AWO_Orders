@page
@model AWO_Orders.Pages.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Bestellung</h1>

@if (Model.OrderModel.Status.BaseStatus != OrderBaseStatusEnum.Open)
{
    <h3>Löschen nicht mehr möglich!</h3>
    <h3>Soll die Bestellung storniert werden?</h3>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderModel.Number)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderModel.Number)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderModel.PlaceDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderModel.PlaceDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderModel.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderModel.Status.Ident)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="OrderModel.Id" />
            <input type="hidden" asp-for="OrderModel.Status.BaseStatus" />
            <input type="submit" value="Cancel" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>

}
else
{
    <h3>wirklich löschen?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderModel.Number)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderModel.Number)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderModel.PlaceDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderModel.PlaceDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderModel.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderModel.Status.Ident)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="OrderModel.Id" />
            <input type="hidden" asp-for="OrderModel.Status.BaseStatus" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
}
