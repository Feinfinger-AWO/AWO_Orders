@page
@model AWO_Orders.Pages.Rights.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Recht</h1>

<h4>Bearbeiten</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RightModel.Id" />
            <div class="form-group">
                <label asp-for="RightModel.Ident" class="control-label"></label>
                <input asp-for="RightModel.Ident" class="form-control" />
                <span asp-validation-for="RightModel.Ident" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RightModel.CanView" /> @Html.DisplayNameFor(model => model.RightModel.CanView)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RightModel.CanOrder" /> @Html.DisplayNameFor(model => model.RightModel.CanOrder)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RightModel.CanProcess" /> @Html.DisplayNameFor(model => model.RightModel.CanProcess)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Zurück</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
