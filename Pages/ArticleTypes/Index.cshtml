@page
@model AWO_Orders.Pages.ArticleTypes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Übersicht Artikelarten</h1>

<p>
    <a asp-page="Create"><img alt="Neu" src="Images\hinzufuegen32.png" /></a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>Suche [Name]</p>
        <p><input class="form-control" name="searchString" width="200" value="@Model.FilterText" /></p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleTypeModel[0].Ident)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleTypeModel[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleTypeModel[0].Changed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleTypeModel[0].ChangedBy)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ArticleTypeModel) {
        <tr>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id"><img alt="Bearbeiten" src="Images\bearbeiten32.png" /></a>
                <a asp-page="./Delete" asp-route-id="@item.Id"><img alt="Löschen" src="Images\loeschen32.png" /></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ident)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Changed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.SureName)
            </td>
        </tr>
}
    </tbody>
</table>