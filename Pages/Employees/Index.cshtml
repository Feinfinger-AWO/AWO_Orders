@page
@model AWO_Orders.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Übersicht Mitarbeiter</h1>

<p>
    <a asp-page="Create">Erstellen</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>Suche [Name/Vorname]</p>
        <p><input class="form-control" name="searchString" width="200" value="@Model.FilterText" /></p>
    </div>
</form>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeModel[0].SureName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeModel[0].Forename)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeModel[0].Job)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeModel[0].Telephone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeModel[0].EMail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeModel[0].IsManager)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeModel[0].RightId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeModel[0].LocationId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeModel[0].Changed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeModel[0].ChangedBy)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.EmployeeModel)
            {
                <tr>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id"><img alt="Bearbeiten" src="Images\bearbeiten32.png" /></a>
                        <a asp-page="./Delete" asp-route-id="@item.Id"><img alt="Löschen" src="Images\loeschen32.png" /></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SureName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Forename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Job)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EMail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsManager)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Right.Ident)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location.Ident)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Changed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.SureName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
